<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:background="@drawable/secondpagebg"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="70dp"
            android:layout_marginBottom="8dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginVertical="40dp"/>
        <TextView
            android:id="@+id/secondPageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ilker yılmaz"
            style="@style/CustomTextStyle"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTextStyle"
                android:text="yaş : "
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/secondPageAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTextStyle"
                android:textSize="30dp"
                android:text="21"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomTextStyle"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTextStyle"
                android:text="oynadığı maç sayısı : "
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/totalMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTextStyle"
                android:textSize="30dp"
                android:text="21"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomTextStyle"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="attığı toplam gol : "
                style="@style/CustomTextStyle"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/totalGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTextStyle"
                android:textSize="30dp"
                android:text="21"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>